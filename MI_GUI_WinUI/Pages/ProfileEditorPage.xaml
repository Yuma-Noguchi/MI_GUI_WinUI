<Page
    x:Class="MI_GUI_WinUI.Pages.ProfileEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MI_GUI_WinUI.Pages"
    xmlns:models="using:MI_GUI_WinUI.Models"
    xmlns:controls="using:MI_GUI_WinUI.Controls"
    xmlns:converters="using:MI_GUI_WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:NumberToVisibilityConverter x:Key="NumberToVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:PageHeader Grid.Row="0" 
                  Title="Profile Editor"/>

        <!-- Profile Management -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="8">
            <TextBox PlaceholderText="Enter profile name"
                 Text="{x:Bind ViewModel.ProfileName, Mode=TwoWay}"
                 VerticalAlignment="Center"
                 Width="300"
                 HorizontalAlignment="Left"/>
            <CommandBar  DefaultLabelPosition="Right" HorizontalAlignment="Right" VerticalAlignment="Center">
                <AppBarButton Icon="Save" Label="Save Profile" Command="{x:Bind ViewModel.SaveProfileCommand}"/>
                <AppBarButton Icon="Add" Label="New Profile" Command="{x:Bind ViewModel.NewProfileCommand}"/>
                <AppBarButton Icon="Clear" Label="Clear Canvas" Command="{x:Bind ViewModel.ClearCanvasCommand}"/>
            </CommandBar>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Button Panel -->
            <ScrollViewer Grid.Column="0" 
                         Width="200" 
                         Margin="0,0,12,0"
                         HorizontalScrollMode="Disabled"
                         VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="12">
                    <!-- Default Buttons -->
                    <StackPanel>
                        <TextBlock Text="Default Buttons"
                                 Style="{ThemeResource SubtitleTextBlockStyle}"
                                 Margin="0,0,0,8"/>

                        <ItemsControl ItemsSource="{x:Bind ViewModel.DefaultButtons}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:EditorButton">
                                    <Image Source="{x:Bind IconPath}"
                                           Width="40" Height="40" Margin="4"
                                           CanDrag="True"
                                           DragStarting="Image_DragStarting"
                                           Tag="{x:Bind Name}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid MaximumRowsOrColumns="3"
                                             Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>

                    <!-- Custom Buttons -->
                    <StackPanel Visibility="{x:Bind ViewModel.CustomButtons.Count, Mode=OneWay, Converter={StaticResource NumberToVisibilityConverter}}">
                        <TextBlock Text="Custom Buttons"
                                 Style="{ThemeResource SubtitleTextBlockStyle}"
                                 Margin="0,0,0,8"/>

                        <ItemsControl ItemsSource="{x:Bind ViewModel.CustomButtons}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:EditorButton">
                                    <Image Source="{x:Bind IconPath}"
                                           Width="40" Height="40" Margin="4"
                                           CanDrag="True"
                                           DragStarting="Image_DragStarting"
                                           Tag="{x:Bind Name}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid MaximumRowsOrColumns="3"
                                             Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Canvas Area -->
            <Border 
                Grid.Column="1"
                BorderBrush="AliceBlue"
                BorderThickness="1,0,0,0">
                <Border
                    BorderBrush="{ThemeResource SystemListLowColor}"
                    BorderThickness="2"
                    CornerRadius="8"
                    Background="AliceBlue"
                    Height="480"
                    Width="640"
                    >
                    <Grid>
                        <TextBlock
                            Text="Drop Buttons Here"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Opacity="0.5"/>
                        <Canvas
                            x:Name="EditorCanvas"
                            Background="Transparent"
                            AllowDrop="True"
                            DragOver="EditorCanvas_DragOver"
                            Drop="EditorCanvas_Drop"
                            Height="480"
                            Width="640"
                            HorizontalAlignment="Center"/>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Page>
