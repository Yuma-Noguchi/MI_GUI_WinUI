<Page
    x:Class="MI_GUI_WinUI.Pages.ProfileEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:MI_GUI_WinUI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:PageHeader Grid.Row="0" Title="Profile Editor"/>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Button List -->
            <Grid Grid.Column="0" Padding="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Profile Name Input -->
                <StackPanel Grid.Row="0" Spacing="8" Margin="0,0,0,16">
                    <TextBox
                        PlaceholderText="Enter Profile Name"
                        Text="{x:Bind ViewModel.ProfileName, Mode=TwoWay}"
                        Width="240"/>
                    <TextBlock
                        Text="{x:Bind ViewModel.ValidationMessage, Mode=OneWay}"
                        Foreground="{ThemeResource SystemErrorTextColor}"
                        TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Button Lists -->
                <ScrollViewer Grid.Row="1" Margin="0,0,0,16">
                    <StackPanel Spacing="16">
                        <!-- Default Buttons -->
                        <StackPanel>
                            <TextBlock
                                Text="Default Buttons"
                                Style="{ThemeResource SubtitleTextBlockStyle}"
                                Margin="0,0,0,8"/>
                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.DefaultButtons}">
                                <ItemsRepeater.Layout>
                                    <UniformGridLayout
                                        MinItemWidth="70"
                                        MinItemHeight="70"
                                        MinRowSpacing="8"
                                        MinColumnSpacing="8"/>
                                </ItemsRepeater.Layout>
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate>
                                        <Image
                                            Source="{Binding IconPath}"
                                            Width="60" Height="60"
                                            Tag="{Binding Name}"
                                            CanDrag="True"
                                            DragStarting="Image_DragStarting"
                                            DropCompleted="Image_DropCompleted"/>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>

                        <!-- Custom Buttons -->
                        <StackPanel>
                            <TextBlock
                                Text="Custom Buttons"
                                Style="{ThemeResource SubtitleTextBlockStyle}"
                                Margin="0,0,0,8"/>
                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.CustomButtons}">
                                <ItemsRepeater.Layout>
                                    <UniformGridLayout
                                        MinItemWidth="70"
                                        MinItemHeight="70"
                                        MinRowSpacing="8"
                                        MinColumnSpacing="8"/>
                                </ItemsRepeater.Layout>
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate>
                                        <Image
                                            Source="{Binding IconPath}"
                                            Width="60" Height="60"
                                            Tag="{Binding Name}"
                                            CanDrag="True"
                                            DragStarting="Image_DragStarting"
                                            DropCompleted="Image_DropCompleted"/>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            
            <Grid Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Right Panel - Canvas -->
                <Border 
                    Grid.Row="0"
                    BorderBrush="{ThemeResource SystemBaseLowColor}"
                    BorderThickness="1,0,0,0"
                    Padding="16">
                    <Border
                        BorderBrush="{ThemeResource SystemListLowColor}"
                        BorderThickness="2"
                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                        CornerRadius="8">
                        <Grid>
                            <TextBlock
                                Text="Drop Buttons Here"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Opacity="0.5"/>
                            <Canvas
                                x:Name="EditorCanvas"
                                Background="Transparent"
                                AllowDrop="True"
                                DragOver="EditorCanvas_DragOver"
                                Drop="EditorCanvas_Drop"/>
                        </Grid>
                    </Border>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12" Margin="16,16" HorizontalAlignment="Right">
                    <Button 
                        Content="New"
                        Width="120"
                        Height="40"
                        Command="{x:Bind ViewModel.NewProfileCommand}"/>
                    <Button 
                        Content="Clear Canvas"
                        Width="120"
                        Height="40"
                        Command="{x:Bind ViewModel.ClearCanvasCommand}"/>
                    <Button 
                        Content="Save"
                        Width="120"
                        Height="40"
                        Style="{ThemeResource AccentButtonStyle}"
                        Command="{x:Bind ViewModel.SaveProfileCommand}"/>
                    <Button 
                        Content="Load"
                        Width="120"
                        Height="40"
                        Command="{x:Bind ViewModel.LoadProfileCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
