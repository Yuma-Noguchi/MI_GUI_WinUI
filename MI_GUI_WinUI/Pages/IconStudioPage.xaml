<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MI_GUI_WinUI.Pages.IconStudioPage"
    x:Name="IconStudioPageRoot"
    Unloaded="Page_Unloaded"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MI_GUI_WinUI"
    xmlns:controls="using:MI_GUI_WinUI.Controls"
    xmlns:models="using:MI_GUI_WinUI.Models"
    xmlns:vm="using:MI_GUI_WinUI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    x:DefaultBindMode="OneWay"
    xmlns:converters="using:MI_GUI_WinUI.Converters">

    <Page.Resources>
        <converters:ProgressStateColorConverter x:Key="ProgressStateColorConverter"/>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:PageHeader Grid.Row="0" Title="{x:Bind ViewModel.Title, Mode=OneWay}"/>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Settings Panel -->
            <StackPanel Grid.Column="0" Spacing="12">
                <!-- GPU/CPU Selection -->
                <ToggleSwitch Header="Use GPU"
                            IsOn="{x:Bind ViewModel.UseGpu, Mode=TwoWay}"
                            IsEnabled="{x:Bind ViewModel.IsNotGenerating, Mode=OneWay}"/>
                
                <!-- Prompt Input -->
                <TextBox Header="Prompt"
                        Text="{x:Bind ViewModel.Prompt, Mode=TwoWay}"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        Height="100"
                        PlaceholderText="Enter a description of the icon you want to generate..."
                        IsEnabled="{x:Bind ViewModel.IsNotGenerating, Mode=OneWay}"/>
                
                <!-- Generate Button -->
                <Button Content="Generate Icon"
                        Command="{x:Bind ViewModel.GenerateCommand}"
                        IsEnabled="{x:Bind ViewModel.IsNotGenerating, Mode=OneWay}"
                        HorizontalAlignment="Stretch"/>

                <!-- Generation Progress -->
                <Grid Visibility="{x:Bind ViewModel.IsGenerating, Mode=OneWay}">
                    <Grid.Resources>
                        <Storyboard x:Key="PulseStoryboard" x:Name="PulseStoryboard" RepeatBehavior="Forever">
                            <DoubleAnimation
                                Storyboard.TargetName="ProgressText"
                                Storyboard.TargetProperty="Opacity"
                                From="1.0" To="0.8" Duration="0:0:1"
                                AutoReverse="True"/>
                            <DoubleAnimation
                                Storyboard.TargetName="StatusText"
                                Storyboard.TargetProperty="Opacity"
                                From="1.0" To="0.7" Duration="0:0:1.5"
                                AutoReverse="True"/>
                            <DoubleAnimation
                                Storyboard.TargetName="ProgressBar"
                                Storyboard.TargetProperty="Opacity"
                                From="1.0" To="0.85" Duration="0:0:1"
                                AutoReverse="True">
                                <DoubleAnimation.EasingFunction>
                                    <CircleEase EasingMode="EaseInOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                            <DoubleAnimation
                                Storyboard.TargetName="LoadingRing"
                                Storyboard.TargetProperty="Opacity"
                                From="0.9" To="0.6" Duration="0:0:2"
                                AutoReverse="True">
                                <DoubleAnimation.EasingFunction>
                                    <CircleEase EasingMode="EaseInOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </Grid.Resources>
                    <ProgressBar x:Name="ProgressBar"
                                Value="{x:Bind ViewModel.GenerationProgress, Mode=OneWay}"
                                IsIndeterminate="False"
                                Maximum="100"
                                Height="6"
                                Margin="0,0,0,8"
                                Foreground="{x:Bind ViewModel.ProgressState, Mode=OneWay, Converter={StaticResource ProgressStateColorConverter}}"
                                Background="{ThemeResource CardStrokeColorDefaultBrush}"
                                CornerRadius="3"/>
                    <StackPanel HorizontalAlignment="Center" Margin="0,12,0,8">
                        <Grid>
                            <!-- Shadow text -->
                            <TextBlock Text="{x:Bind ViewModel.GenerationProgress, Mode=OneWay}"
                                     HorizontalAlignment="Center"
                                     Style="{StaticResource BodyStrongTextBlockStyle}"
                                     Foreground="{x:Bind ViewModel.ProgressState, Mode=OneWay, Converter={StaticResource ProgressStateColorConverter}, ConverterParameter=shadow}"
                                     Margin="1,1,0,0"/>
                            <!-- Main text -->
                            <TextBlock x:Name="ProgressText"
                                     Text="{x:Bind ViewModel.GenerationProgress, Mode=OneWay}"
                                     HorizontalAlignment="Center"
                                     Style="{StaticResource BodyStrongTextBlockStyle}"
                                     Foreground="{x:Bind ViewModel.ProgressState, Mode=OneWay, Converter={StaticResource ProgressStateColorConverter}}"/>
                        </Grid>
                        <TextBlock x:Name="StatusText"
                                 Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                                 HorizontalAlignment="Center"
                                 Style="{StaticResource CaptionTextBlockStyle}"
                                 Foreground="{x:Bind ViewModel.ProgressState, Mode=OneWay, Converter={StaticResource ProgressStateColorConverter}}"
                                 FontWeight="SemiBold"
                                 Margin="0,4,0,0"/>
                    </StackPanel>
                    <ProgressRing x:Name="LoadingRing"
                                IsActive="{x:Bind ViewModel.IsGenerating, Mode=OneWay}"
                                Width="50" Height="50"
                                HorizontalAlignment="Center"
                                Margin="0,60,0,0"
                                Foreground="{x:Bind ViewModel.ProgressState, Mode=OneWay, Converter={StaticResource ProgressStateColorConverter}}"/>
                </Grid>
                
                <!-- Save Section -->
                <StackPanel Visibility="{x:Bind ViewModel.IsImageGenerated, Mode=OneWay}">
                    <TextBox Header="Icon Name"
                            Text="{x:Bind ViewModel.IconName, Mode=TwoWay}"
                            PlaceholderText="Enter a name for your icon..."
                            Margin="0,12,0,0"/>
                    <Button Content="Save Icon"
                            Command="{x:Bind ViewModel.SaveCommand}"
                            HorizontalAlignment="Stretch"
                            Margin="0,12,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Preview Panel -->
            <Grid Grid.Column="1">
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Width="200"
                        Height="200"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    
                    <!-- Center the 60x60 preview with a border -->
                    <Border Width="60"
                            Height="60"
                            Background="Transparent"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="30">
                        
                        <Image Source="{x:Bind ViewModel.PreviewImage, Mode=OneWay}"
                               Stretch="UniformToFill"/>
                    </Border>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
