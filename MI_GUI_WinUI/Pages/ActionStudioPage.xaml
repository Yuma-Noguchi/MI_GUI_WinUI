<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MI_GUI_WinUI.Pages.ActionStudioPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MI_GUI_WinUI"
    xmlns:controls="using:MI_GUI_WinUI.Controls"
    xmlns:models="using:MI_GUI_WinUI.Models"
    xmlns:viewmodels="using:MI_GUI_WinUI.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:PageHeader Grid.Row="0" Title="{x:Bind ViewModel.Title, Mode=OneWay}"/>

        <!-- Main content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Action Library Panel -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Action Library" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>
                
                <ListView Grid.Row="1" 
                          ItemsSource="{x:Bind ViewModel.Actions, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedAction, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="models:Action">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{x:Bind Name, Mode=OneWay}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0" Spacing="10">
                    <Button Content="New Action" Command="{x:Bind ViewModel.CreateActionCommand}"/>
                    <Button Content="Delete" Command="{x:Bind ViewModel.DeleteActionCommand}"/>
                </StackPanel>
            </Grid>

            <!-- Action Configuration Panel -->
            <Grid Grid.Column="1" Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel>
                    <TextBlock Text="Action Configuration" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>
                    <TextBox Header="Name" 
                             Text="{x:Bind ViewModel.SelectedAction.Name, Mode=TwoWay}"
                             IsEnabled="{x:Bind ViewModel.IsActionSelected, Mode=OneWay}"
                             Margin="0,0,0,10"/>
                    <TextBox Header="Description"
                             Text="{x:Bind ViewModel.SelectedAction.Description, Mode=TwoWay}"
                             IsEnabled="{x:Bind ViewModel.IsActionSelected, Mode=OneWay}"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"
                             Margin="0,0,0,10"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- Sequence Editor -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Button Selection -->
                        <StackPanel Grid.Row="0" Spacing="8">
                            <ComboBox Header="Select Button"
                                    ItemsSource="{x:Bind ViewModel.AvailableButtons}"
                                    SelectedItem="{x:Bind ViewModel.SelectedButton, Mode=TwoWay}"
                                    HorizontalAlignment="Stretch"/>

                            <Button Content="Add to Sequence" 
                                   Command="{x:Bind ViewModel.AddToSequenceCommand}"
                                   HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- Sequence List -->
                        <ListView x:Name="SequenceList"
                                 Grid.Row="1"
                                 ItemsSource="{x:Bind ViewModel.ActionSequence, Mode=OneWay}"
                                 Margin="0,16,0,0"
                                 BorderThickness="1"
                                 BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding [press][0]}"
                                                  VerticalAlignment="Center"/>
                                        <Button Grid.Column="1"
                                                Content="Remove" 
                                                Command="{Binding DataContext.RemoveFromSequenceCommand, ElementName=SequenceList}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Sleep Duration and Save -->
                        <StackPanel Grid.Row="2" Margin="0,16,0,0" Spacing="8">
                            <NumberBox Header="Sleep Duration (seconds)"
                                     Value="{x:Bind ViewModel.SleepDuration, Mode=TwoWay}"
                                     SpinButtonPlacementMode="Compact"
                                     SmallChange="0.1"
                                     LargeChange="0.5"
                                     Minimum="0.1"
                                     Maximum="5.0"/>

                            <Button Content="Save Action Sequence" 
                                   Command="{x:Bind ViewModel.SaveSequenceCommand}"
                                   Style="{ThemeResource AccentButtonStyle}"
                                   HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Action Preview Panel -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Action Preview" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>

                <Border Grid.Row="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <Grid>
                        <TextBlock Text="Action Preview Panel"
                                 Style="{StaticResource CaptionTextBlockStyle}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
