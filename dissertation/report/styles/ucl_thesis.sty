% Page style configuration
\pagestyle{fancy}
\fancyhf{}
\fancyhead[L]{\slshape\nouppercase{\leftmark}}
\fancyhead[R]{\thepage}
\renewcommand{\headrulewidth}{0.4pt}
\setlength{\headheight}{14.5pt}

% Chapter style configuration
\usepackage{titlesec}
\titleformat{\chapter}[display]
{\normalfont\huge\bfseries}{\chaptertitlename\ \thechapter}{20pt}{\Huge}
\titlespacing*{\chapter}{0pt}{-50pt}{40pt}

% Line spacing
\onehalfspacing

% Figure settings
\graphicspath{{figures/}}
\DeclareGraphicsExtensions{.pdf,.png,.jpg}

% Code listing settings
\lstset{
    language=[Sharp]C,
    basicstyle=\footnotesize\ttfamily,
    numbers=left,
    numberstyle=\tiny,
    frame=single,
    tabsize=2,
    breaklines=true,
    showstringspaces=false,
    captionpos=b
}

% Define C# language for listings
\lstdefinelanguage{csharp}{
    language=[Sharp]C,
    morekeywords={var,async,await,string,get,set,where,select,from,orderby,ascending,descending},
    sensitive=true,
    morecomment=[l]{//},
    morecomment=[s]{/*}{*/},
    morestring=[b]",
}

\usemintedstyle{friendly}
\setminted{
  frame=single,
  framesep=2mm,
  baselinestretch=1.2,
  fontsize=\footnotesize,
  linenos
}

% Hyperref settings
\hypersetup{
    colorlinks=true,
    linkcolor=blue,
    filecolor=magenta,
    urlcolor=cyan,
    citecolor=blue,
    pdftitle={MotionInput Configuration GUI},
    pdfauthor={Your Name},
    pdfsubject={Computer Science BSc Project},
    pdfkeywords={MotionInput, GUI, Accessibility, Gaming}
}

% Caption settings
\captionsetup{
    format=hang,
    font=small,
    labelfont=bf
}

% Table settings
\renewcommand{\arraystretch}{1.2}

